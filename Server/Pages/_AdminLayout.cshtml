@using Microsoft.AspNetCore.Http
@{
    var title = ViewData["Title"] ?? "Admin Panel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - SharpPress Admin</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --accent: #8b5cf6;
            --bg-body: #0f172a;
            --bg-sidebar: #161b22;
            --bg-card: #1e293b;
            --bg-input: #0b1120;
            --bg-hover: #252b36;
            --text-main: #e2e8f0;
            --text-muted: #94a3b8;
            --text-white: #ffffff;
            --primary: #4f46e5;
            --primary-hover: #4338ca;
            --primary-glow: rgba(79, 70, 229, 0.25);
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --radius-lg: 16px;
            --radius-md: 12px;
            --radius-sm: 8px;
            --border-subtle: rgba(255, 255, 255, 0.08);
            --shadow-soft: 0 8px 30px rgba(0, 0, 0, 0.25);
            --shadow-glow: 0 0 20px var(--primary-glow);
        }

        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: var(--bg-body);
            color: var(--text-main);
            height: 100vh;
            overflow: hidden;
            -webkit-font-smoothing: antialiased;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        ul {
            list-style: none;
        }

        #auth-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at top right, #1e293b 0%, #0f172a 100%);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.5s ease-in-out, opacity 0.5s ease-in-out;
        }

            #auth-overlay.hidden {
                transform: translateY(-100%);
                opacity: 0;
                pointer-events: none;
            }

        .auth-card {
            width: 100%;
            max-width: 400px;
            padding: 2.5rem;
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(12px);
            border: 1px solid var(--border-subtle);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-soft), var(--shadow-glow);
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .auth-header i {
                font-size: 2rem;
                color: var(--primary);
                margin-bottom: 1rem;
            }

            .auth-header h1 {
                font-size: 1.8rem;
                color: var(--text-white);
                margin-bottom: 0.5rem;
            }

            .auth-header p {
                color: var(--text-muted);
                font-size: 0.9rem;
            }

        .input-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

            .input-group label {
                display: block;
                font-size: 0.85rem;
                color: var(--text-muted);
                margin-bottom: 0.5rem;
            }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

            .input-wrapper i {
                position: absolute;
                left: 1rem;
                color: var(--text-muted);
            }

        .form-input {
            width: 100%;
            padding: 0.8rem 1rem 0.8rem 2.8rem;
            background: var(--bg-input);
            border: 1px solid var(--border-subtle);
            border-radius: var(--radius-md);
            color: var(--text-white);
            font-size: 0.95rem;
            transition: 0.2s;
        }

            .form-input:focus {
                border-color: var(--primary);
                outline: none;
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.15);
            }

        .btn-login {
            width: 100%;
            padding: 0.9rem;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: var(--radius-md);
            font-weight: 600;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
        }

            .btn-login:hover {
                background: var(--primary-hover);
            }

            .btn-login:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }

        .alert {
            padding: 0.75rem;
            border-radius: var(--radius-sm);
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
            display: none;
            align-items: center;
            gap: 8px;
        }

            .alert.error {
                background: rgba(239, 68, 68, 0.1);
                color: var(--danger);
                border: 1px solid rgba(239, 68, 68, 0.2);
            }

        #admin-interface {
            display: flex;
            height: 100vh;
            width: 100%;
            opacity: 0;
            transition: opacity 0.5s ease;
            visibility: hidden;
        }

            #admin-interface.visible {
                opacity: 1;
                visibility: visible;
            }

        .sidebar {
            width: 260px;
            background: var(--bg-sidebar);
            border-right: 1px solid var(--border-subtle);
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
        }

        .sidebar-header {
            padding: 1.5rem;
            text-align: center;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-white);
            border-bottom: 1px solid var(--border-subtle);
        }

        .sidebar-menu {
            padding: 1.5rem 0.75rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 0.85rem 1.25rem;
            color: var(--text-muted);
            border-radius: var(--radius-md);
            cursor: pointer;
            transition: 0.2s;
        }

            .menu-item:hover {
                background: rgba(255,255,255,0.05);
                color: var(--text-white);
                transform: translateX(4px);
            }

            .menu-item.active {
                background: var(--primary);
                color: var(--text-white);
                box-shadow: var(--shadow-glow);
            }

            .menu-item i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
            }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .top-bar {
            height: 70px;
            background: rgba(255,255,255,0.02);
            border-bottom: 1px solid var(--border-subtle);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 2.5rem;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .avatar {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--primary), #818cf8);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: white;
        }

        .content-scroll {
            flex-grow: 1;
            overflow-y: auto;
            padding: 2.5rem;
        }

        .spinner {
            border: 3px solid rgba(255,255,255,0.1);
            border-left-color: var(--text-white);
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 1s linear infinite;
        }

        keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .btn-logout {
            background: rgba(239, 68, 68, 0.1);
            color: var(--danger);
            border: 1px solid rgba(239, 68, 68, 0.2);
            padding: 0.5rem 1rem;
            border-radius: var(--radius-sm);
            font-size: 0.85rem;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            align-items: center;
            gap: 6px;
        }

    .btn-logout:hover {
        background: rgba(239, 68, 68, 0.2);
    }


        .layout-wrapper {
            display: flex;
            height: 100vh;
            width: 100%;
            position: relative;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--border-subtle);
        }

        .card-title {
            font-size: 1.4rem;
            font-weight: 600;
            color: var(--text-white);
            letter-spacing: -0.3px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .stat-box {
            background: linear-gradient(135deg, var(--bg-card), rgba(255,255,255,0.03));
            padding: 2rem;
            border-radius: var(--radius-lg);
            border: 1px solid var(--border-subtle);
            text-align: center;
            transition: transform 0.3s ease;
        }

            .stat-box:hover {
                transform: translateY(-3px);
            }

        .stat-value {
            font-size: 1rem;
            font-weight: 700;
            color: var(--text-white);
            margin-top: 0.5rem;
            letter-spacing: -1px;
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 1.2px;
            font-weight: 600;
        }

        .table-container {
            overflow-x: auto;
            border: 1px solid var(--border-subtle);
            border-radius: var(--radius-md);
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        th {
            background-color: rgba(255,255,255,0.02);
            color: var(--text-muted);
            font-weight: 600;
            text-align: left;
            padding: 1rem 1.25rem;
            border-bottom: 1px solid var(--border-subtle);
        }

        td {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid var(--border-subtle);
            color: var(--text-main);
            transition: background 0.2s;
        }

        tr:hover td {
            background-color: rgba(255,255,255,0.02);
        }

        .badge {
            display: inline-block;
            padding: 0.4rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            color: white;
            letter-spacing: 0.5px;
        }

        .badge-primary {
            background-color: var(--primary);
            box-shadow: 0 0 10px var(--primary-glow);
        }

        .badge-success {
            background-color: var(--success);
        }

        .badge-danger {
            background-color: var(--danger);
        }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: var(--radius-md);
            border: 1px solid var(--border-subtle);
            background-color: rgba(59, 130, 246, 0.05);
            margin-bottom: 1rem;
            color: var(--text-main);
        }

        .alert-info {
            border-left: 4px solid var(--primary);
        }

        .alert-danger {
            border-left: 4px solid var(--danger);
        }

        .logo { color: white; }
        .logo span { color: var(--accent); }
    </style>
</head>
<body>
    <div id="auth-overlay">
        <div class="auth-card">
            <div class="auth-header">
                <i class="fas fa-server"></i>
                <div class="logo">Sharp<span>Press</span></div>
                <p>Admin Authentication</p>
            </div>

            <div id="login-alert" class="alert error">
                <i class="fas fa-exclamation-circle"></i>
                <span id="login-alert-msg">Invalid credentials</span>
            </div>

            <form id="login-form">
                <div class="input-group">
                    <label>Username</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user"></i>
                        <input type="text" id="username" class="form-input" placeholder="Enter username" required autocomplete="username">
                    </div>
                </div>

                <div class="input-group">
                    <label>Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="password" class="form-input" placeholder="Enter password" required autocomplete="current-password">
                    </div>
                </div>

                <div class="input-group" style="display: flex; align-items: center; gap: 8px;">
                    <input type="checkbox" id="remember-me">
                    <label for="remember-me" style="margin: 0; cursor: pointer;">Remember me</label>
                </div>

                <button type="submit" class="btn-login" id="login-btn">
                    <span>Sign In</span>
                    <div class="spinner" id="login-spinner" style="display: none;"></div>
                </button>
            </form>
        </div>
    </div>

    <div id="admin-interface">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">Sharp<span>Press</span></div>
            </div>
            <ul class="sidebar-menu">
                <li><a href="/admin" class="menu-item"><i class="fas fa-chart-line"></i> Dashboard</a></li>
                <li><a href="/admin/plugins" class="menu-item"><i class="fas fa-plug"></i> Plugins</a></li>
                <li><a href="/admin/users" class="menu-item"><i class="fas fa-users"></i> Users</a></li>
                <li><a href="/admin/settings" class="menu-item"><i class="fas fa-cog"></i> Settings</a></li>
                <li style="margin-top: auto;">
                    <a href="/" class="menu-item" style="color: var(--text-muted);"><i class="fas fa-arrow-left"></i> Back to Site</a>
                </li>
            </ul>
        </aside>

        <main class="main-content">
            <header class="top-bar">
                <span style="font-weight: 600; font-size: 1.1rem;">@ViewData["Title"]</span>

                <div style="display: flex; align-items: center; gap: 15px;">

                    <button id="logout-btn" class="btn-logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>

                    <div class="user-profile">
                        <div style="display: flex; flex-direction: column; align-items: flex-end;">
                            <span id="user-name" style="font-size: 0.9rem; font-weight: 600;">Admin</span>
                            <span style="font-size: 0.75rem; color: var(--text-muted);">Online</span>
                        </div>
                        <div class="avatar" id="user-avatar">A</div>
                    </div>
                </div>
            </header>

            <div class="content-scroll">
                @RenderBody()
            </div>
        </main>
    </div>

    <script>
        const Auth = {
            tokenKey: 'sharppress_token',
            userKey: 'sharppress_user',

            getToken() {
                return localStorage.getItem(this.tokenKey) || sessionStorage.getItem(this.tokenKey);
            },

            getUser() {
                const userStr = localStorage.getItem(this.userKey) || sessionStorage.getItem(this.userKey);
                return userStr ? JSON.parse(userStr) : null;
            },

            setAuth(token, refreshToken, user, remember) {
                const storage = remember ? localStorage : sessionStorage;
                storage.setItem(this.tokenKey, token);
                storage.setItem('sharppress_refresh', refreshToken);
                storage.setItem(this.userKey, JSON.stringify(user));
            },

            clearAuth() {
                localStorage.removeItem(this.tokenKey);
                localStorage.removeItem('sharppress_refresh');
                localStorage.removeItem(this.userKey);
                sessionStorage.removeItem(this.tokenKey);
                sessionStorage.removeItem('sharppress_refresh');
                sessionStorage.removeItem(this.userKey);
            },

            isAuthenticated() {
                return !!this.getToken();
            }
        };

        async function apiRequest(url, options = {}) {
            const token = Auth.getToken();

            options.headers = {
                'Content-Type': 'application/json',
                ...options.headers
            };

            if (token) {
                options.headers['Authorization'] = `Bearer ${token}`;
            }

            try {
                const response = await fetch(url, options);

                if (response.status === 401) {
                    Auth.clearAuth();
                    window.location.reload();
                    throw new Error('Unauthorized');
                }

                return response;
            } catch (error) {
                console.error('API Request Failed:', error);
                throw error;
            }
        }

        window.apiRequest = apiRequest;

        document.addEventListener('DOMContentLoaded', () => {
            const authOverlay = document.getElementById('auth-overlay');
            const adminInterface = document.getElementById('admin-interface');
            const loginForm = document.getElementById('login-form');
            const loginBtn = document.getElementById('login-btn');
            const loginSpinner = document.getElementById('login-spinner');
            const loginBtnText = loginBtn.querySelector('span');
            const loginAlert = document.getElementById('login-alert');
            const loginAlertMsg = document.getElementById('login-alert-msg');
            const logoutBtn = document.getElementById('logout-btn');

            if (Auth.isAuthenticated()) {
                showAdminPanel();
            } else {
                showLoginScreen();
            }

            loginForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                const remember = document.getElementById('remember-me').checked;

                loginBtn.disabled = true;
                loginSpinner.style.display = 'block';
                loginBtnText.textContent = 'Signing In...';
                loginAlert.style.display = 'none';

                try {
                    const response = await apiRequest('/api/login', {
                        method: 'POST',
                        body: JSON.stringify({ username, password })
                    });

                    const data = await response.json();

                    if (response.ok && data.success) {
                        Auth.setAuth(data.token, data.refreshToken, data.user, remember);
                        showAdminPanel();
                    } else {
                        throw new Error(data.message || 'Login failed');
                    }

                } catch (error) {
                    console.error(error);
                    loginAlertMsg.textContent = error.message || 'An error occurred during login.';
                    loginAlert.style.display = 'flex';
                } finally {
                    loginBtn.disabled = false;
                    loginSpinner.style.display = 'none';
                    loginBtnText.textContent = 'Sign In';
                }
            });

            logoutBtn.addEventListener('click', () => {
                Auth.clearAuth();
                window.location.reload();
            });

            function showLoginScreen() {
                authOverlay.classList.remove('hidden');
                adminInterface.classList.remove('visible');
            }

            function showAdminPanel() {
                const user = Auth.getUser();
                if (user) {
                    document.getElementById('user-name').textContent = user.username || 'Admin';
                    document.getElementById('user-avatar').textContent = (user.username || 'A').charAt(0).toUpperCase();
                }

                authOverlay.classList.add('hidden');
                adminInterface.classList.add('visible');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>